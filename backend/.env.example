# Backend Environment Variables
# Copy this file to .env in backend/lms_project/ folder

# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite by default, change for production)
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Email Configuration (for password reset functionality)
# Using Mailtrap for testing - get credentials from https://mailtrap.io
EMAIL_HOST=sandbox.smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-mailtrap-username
EMAIL_HOST_PASSWORD=your-mailtrap-password
DEFAULT_FROM_EMAIL=noreply@lms.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Security Settings (Optional - for production)
# SECURE_SSL_REDIRECT=False
# SESSION_COOKIE_SECURE=False
# CSRF_COOKIE_SECURE=False
